<h1><%= @article.title %></h1>
<p><%= @article.body %></p>
<ul>
	<% if !current_user.nil? && current_user.id == @article.user_id %>
		<li><%= link_to "Edit", edit_article_path(@article) %></li>
		<li><%= button_to "Destroy", article_path(@article), method: :delete, :onclick => "return confirm('Are you sure you want to delete this post?')" %></li>
	<% end %>
	<h2>Comments</h2>
	<%= render @article.comments %>
	<h2>Add a comment:</h2>
	<%= render 'comments/form', article: @article, user: @user  %>
</ul>
